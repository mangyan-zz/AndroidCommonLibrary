<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ExpandableTextViewAttr">
        <!-- 允许显示最大行数 -->
        <attr name="maxExpandLines" format="integer"></attr>
        <!-- 动画执行时间 -->
        <attr name="duration" format="integer"></attr>
    </declare-styleable>

    <!-- SwipyRefreshLayout相关属性 -->
    <declare-styleable name="SwipyRefreshLayout"> 
        <attr name="srl_direction"> 
            <enum name="top" value="0" /> 
            <enum name="bottom" value="1" /> 
            <enum name="both" value="2" /> 
        </attr> 
    </declare-styleable>

    <!-- 导航条相关属性 -->
    <declare-styleable name="LineIndicatorViewAttr">
        <!-- 选中指示标的高度 -->
        <attr name="heightSel" format="dimension"/>
        <!-- 选中指示标的宽度 -->
        <attr name="widthSel" format="dimension"/>
        <!-- 默认指示标的高度 -->
        <attr name="heightNor" format="dimension"/>
        <!-- 默认指示标的宽度 -->
        <attr name="widthNor" format="dimension"/>
        <!-- 选中 -->
        <attr name="choiceColor" format="reference|color"/>
        <!-- 默认 -->
        <attr name="noneChoiceColor" format="reference|color"/>
        <!-- 间距 -->
        <attr name="margin" format="dimension"/>
    </declare-styleable>
</resources>